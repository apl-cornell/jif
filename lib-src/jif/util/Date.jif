    // formatting methods
    public String{L} toLongString() {
        String min = "" + minute;
        if (min.length() < 2) min = "0" + min;
        String h = "" + hour;
        if (h.length() < 2) h = "0" + h;
        
        return day + " " + getMonthName() + " " + year + " " + h + ":" + min;
    }
    public String{L} toShortString() {
        String min = "" + minute;
        if (min.length() < 2) min = "0" + min;
        String h = "" + hour;
        if (h.length() < 2) h = "0" + h;
        return day + "-" + month + "-" + year + " " + h + ":" + min;
    }
    
    
